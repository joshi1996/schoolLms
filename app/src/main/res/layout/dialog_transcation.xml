<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">


    <LinearLayout android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView android:id="@+id/ivclose"
            android:layout_width="20dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:backgroundTint="@color/light_gray"
            android:background="@drawable/rounded_textview_red"
            android:src="@drawable/ic_close_blue"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_20sp"
            android:gravity="center_vertical"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:text="@string/earningText"
            android:textColor="@color/splash_color" />


        <LinearLayout  android:id="@+id/llayout"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvcoursename"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:textColor="@color/black"
                android:text="" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvamount"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:textColor="@color/black"
                android:text="dfsfdff" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvpaymentgateway"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:textColor="@color/black"
                android:text="dfsfdff" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvtranscationid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:textColor="@color/black"
                android:text="dfsfdff" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvdate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:textColor="@color/black"
                android:text="dfsfdff" />


        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>