<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/assessment_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_70"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/trans_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,UselessParent">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/assess_image"
                    android:padding="3dp"
                    android:contentDescription="@string/app_name">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:id="@+id/assessment_topic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center|start"
                            android:paddingStart="@dimen/margin_5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_14sp"
                            tools:ignore="RtlSymmetry">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="2.5"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/date_icon"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/margin_5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8">

                            <TextView
                                android:id="@+id/assessment_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:paddingStart="@dimen/margin_5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_14sp"
                                tools:ignore="RtlSymmetry">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/assess_view"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/zoom_back_draw"
                        android:text="@string/assessment_view"
                        android:textSize="14sp"
                        android:layout_margin="@dimen/margin_5">

                    </Button>

                    <Button
                        android:visibility="gone"
                        android:id="@+id/assess_view_flag"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/submit_assessment_background"
                        android:text="@string/assessment_view"
                        android:textSize="12sp"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_5">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>

