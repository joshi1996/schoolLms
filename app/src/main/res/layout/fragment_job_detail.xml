<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:clickable="true"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">


            <include android:id="@+id/ll_header_job_detail"
                layout="@layout/headerlayout"/>

            <ImageView android:id="@+id/iv_cover_job_detail"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:background="@drawable/main_background_image"
                android:layout_below="@+id/ll_header_job_detail">
            </ImageView>


            <LinearLayout android:id="@+id/ll_detail_job_detail"
                android:layout_below="@+id/iv_cover_job_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingLeft="@dimen/margin_5"
                        android:id="@+id/tv_title_job_detail"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_14sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:textStyle="bold"

                        android:layout_below="@+id/iv_categoryimage"/>

                    <!--<androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:max="5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_below="@+id/tv_title"
                        android:scaleX="1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:scaleY="1"
                        android:rating="0"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:theme="@style/MyRatingBar" />-->


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="right|center_vertical"
                        android:layout_below="@+id/tv_title_job_detail">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_desciptiontitle_job_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_12sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:text="@string/detail"
                            android:drawableRight="@drawable/ic_arrow_down"
                            android:textColor="@color/textcolor" />

                        <!--<View android:id="@+id/viewline1_detail"
                            android:layout_width="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_height="match_parent"
                            android:background="@color/light_gray"/>
-->
                        <!--<androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_addfree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_12sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:text="@string/addfree"
                            android:textColor="@color/splash_color" />-->


                        <!--<View android:id="@+id/vline2"
                            android:layout_width="2dp"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="match_parent" android:background="@color/light_gray"/>-->
                       <!-- <androidx.appcompat.widget.AppCompatTextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_buynow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_12sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:text="@string/buynow"
                            android:textColor="#028D44" />-->

                    </LinearLayout>


                    <!--<androidx.appcompat.widget.AppCompatTextView
                        android:paddingLeft="@dimen/margin_5"
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_14sp"
                        android:textColor="@color/textcolor"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_subcription"
                        android:drawablePadding="@dimen/margin_5"
                        android:drawableLeft="@drawable/ic_rupee"
                        android:layout_below="@+id/iv_categoryimage"/>
-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingLeft="@dimen/margin_5"
                        android:id="@+id/tv_subcription_job_detail"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_14sp"
                        android:textColor="@color/textcolor"
                        android:text=""
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/iv_categoryimage"
                        android:drawablePadding="@dimen/margin_5"
                        android:gravity="center_vertical" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/hint_gray"/>


                <WebView
                    android:id="@+id/wv_desciption_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textSize="@dimen/textsize_12sp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textcolor"
                    tools:ignore="WebViewLayout" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_item_job_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="@dimen/medium_margin"/>

            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <data>

    </data>
</layout>