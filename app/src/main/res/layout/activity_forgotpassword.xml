    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@color/colorloginBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/iv_free"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/forget_password_back"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/margin_10"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="-20dp">

                    <LinearLayout
                        android:id="@+id/pass_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:layout_marginLeft="@dimen/medium_margin"
                        android:layout_marginRight="@dimen/medium_margin"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp">

                            <ImageView
                                android:id="@+id/forget_mobile"
                                android:layout_width="@dimen/margin_40"
                                android:layout_height="45dp"
                                android:src="@drawable/change_pass_icon"
                                android:padding="@dimen/margin_10"
                                android:contentDescription="@string/app_name"/>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/inmobileno"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:hint="@string/entermobileno"
                                android:layout_toEndOf="@id/forget_mobile"
                                android:inputType="phone"
                                android:textColor="@color/textcolor"
                                android:theme="@style/TextLabel" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_resetpassword"
                            style="@style/App_ButtonlineblueStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="@string/submit"
                            android:textAllCaps="false" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_signin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="@string/signin"
                            android:textStyle="bold"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/textsize_14sp" />

                        <LinearLayout
                            android:id="@+id/sign_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/margin_10">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/donthaveaccont"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_signup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/signup_title"
                                android:textColor="#ff272e"
                                android:textSize="@dimen/textsize_14sp" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/medium_margin"
                            android:layout_marginRight="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_20"
                            android:elevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">


                            <ImageView
                                android:id="@+id/iv_advertisement_forget"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_100"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name" />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

