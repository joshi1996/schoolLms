<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_header_job"
            layout="@layout/headerlayout" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_header_job"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <RelativeLayout
                    android:id="@+id/ll_parent_job_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_header_job"
                    android:background="@drawable/trans_background"
                    android:layout_margin="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_for_job"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_jobimage"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:padding="1dp"
                        android:background="@drawable/main_background_image"
                        android:layout_below="@id/header_for_job"
                        android:layout_centerHorizontal="true"/>

                    <View
                        android:id="@+id/viewline"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@+id/iv_jobimage"
                        android:background="@color/light_gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewline"
                        android:paddingLeft="@dimen/margin_5"
                        android:textAlignment="center"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/textsize_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_10"
                        android:layout_below="@id/tv_title_job">
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <RelativeLayout
                    android:id="@+id/ll_parent_job_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans_background"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_for_job_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_jobimage_1"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_below="@id/header_for_job_1"
                        android:padding="1dp"
                        android:background="@drawable/main_background_image"
                        android:layout_centerHorizontal="true"/>


                    <View
                        android:id="@+id/viewline_1"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@+id/iv_jobimage_1"
                        android:background="@color/light_gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title_job_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewline_1"
                        android:paddingLeft="@dimen/margin_5"
                        android:textColor="@color/textcolor"
                        android:textAlignment="center"
                        android:textSize="@dimen/textsize_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_10"
                        android:layout_below="@id/tv_title_job_1">
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <data>

    </data>
</layout>