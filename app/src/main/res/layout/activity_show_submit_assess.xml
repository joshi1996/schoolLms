<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.ShowSubmitAssessActivity">

    <include
        layout="@layout/headerlayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/show_assessment_list">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/show_assessment_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assess_no_data_found"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/splash_color">
        </TextView>

        <!--<ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150"
            android:layout_gravity="center"
            android:background="@drawable/notfound"
            android:visibility="gone">
        </ImageView>-->

    </LinearLayout>

</LinearLayout>